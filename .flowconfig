[ignore]
.*\.spec\.js

[include]

[libs]
./flow-typed

[lints]
nonstrict-import=error
unsafe-getters-setters=error
untyped-import=error
untyped-type-import=error

[options]
emoji=true
module.name_mapper='^\(.*\)$' -> '<PROJECT_ROOT>/src/\1'
module.name_mapper='^@grail\/\(.*\)$' -> '<PROJECT_ROOT>/../\1'
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.scss