{
  "name": "@grail/lib",
  "version": "0.3.0",
  "scripts": {
    "build": "rm -rf dist/ && mkdir dist/ && yarn build:lib && babel-node ./scripts/build.js",
    "build:lib": "NODE_ENV=production babel ./src --out-dir ./dist --delete-dir-on-start --copy-files",
    "cover": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "lint": "eslint --ext .js constants/ utils/ client-utils/",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write \"utils/**/*.js\" \"client-utils/**/*.js\" \"constants/**/*.js\" \"scripts/**/*.js\" && yarn lint-fix",
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn install\")'",
    "precommit": "lint-staged",
    "test": "jest --watch",
    "test:staged": "jest --coverage && echo --findRelatedTests does not work properly with coverage",
    "test-all": "jest --coverage"
  },
  "dependencies": {
    "googleapis": "^32.0.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "node-fetch": "^2.1.2",
    "passport": "^0.4.0",
    "passport-strategy": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/node": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^23.0.1",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "flow-bin": "^0.75.0",
    "jest": "^23.1.0",
    "jest-mock-console": "^0.3.5",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --rule flowtype/require-valid-file-annotation:2 --fix",
        "git add"
      ],
      "*.{scss,json,md}": [
        "prettier --write",
        "git add"
      ],
      "*.config.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/utils/**/*.js",
      "!src/utils/**/index.js",
      "!src/utils/index.js",
      "!src/utils/mocks/**",
      "src/client-utils/**/*.js",
      "!src/client-utils/**/index.js",
      "!src/client-utils/index.js",
      "!src/client-utils/mocks/**"
    ],
    "coverageThreshold": {
      "src/utils/**/*.js": {
        "branches": 80,
        "functions": 100,
        "lines": 90,
        "statements": -10
      }
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "testEnvironment": "node"
  },
  "main": "src/index.js",
  "private": true,
  "sideEffects": false
}
