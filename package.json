{
  "name": "@grail/lib",
  "version": "0.1.0",
  "scripts": {
    "build": "mkdir -p dist/ && yarn build:constants && yarn build:utils",
    "build:constants": "NODE_ENV=production babel ./constants --out-dir ./dist/constants --delete-dir-on-start --copy-files",
    "build:utils": "NODE_ENV=production babel ./utils --out-dir ./dist/utils --delete-dir-on-start --copy-files",
    "cover": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "lint": "eslint --ext .js constants/ utils/",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write \"utils/**/*.js\" \"constants/**/*.js\" && yarn lint-fix",
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn install\")'",
    "precommit": "lint-staged",
    "test": "jest --watch",
    "test:staged": "jest --coverage && echo --findRelatedTests does not work properly with coverage",
    "test-all": "jest --coverage"
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^23.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "flow-bin": "^0.75.0",
    "jest": "^23.1.0",
    "jest-mock-console": "^0.3.5",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --rule flowtype/require-valid-file-annotation:2 --fix",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ],
      "*.config.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "utils/**/*.js",
      "!utils/**/index.js",
      "!utils/index.js",
      "!utils/mocks/**"
    ],
    "coverageThreshold": {
      "utils/**/*.js": {
        "branches": 80,
        "functions": 100,
        "lines": 90,
        "statements": -10
      }
    },
    "testEnvironment": "node"
  },
  "private": true,
  "sideEffects": false
}
