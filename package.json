{
  "name": "@grail/lib",
  "version": "0.6.0",
  "scripts": {
    "build": "NODE_ENV=production yarn build:src && babel-node ./scripts/build.js",
    "build:src": "babel ./src --out-dir ./dist --delete-dir-on-start --copy-files",
    "build:client": "NODE_ENV=production yarn build:src",
    "start:client": "NODE_ENV=development yarn build:src --watch --source-maps",
    "cover": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "lint": "eslint --ext .js src/ scripts/",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\" && yarn lint-fix",
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn install\")'",
    "precommit": "lint-staged",
    "test": "jest --watch",
    "test:staged": "jest --coverage --findRelatedTests",
    "test-all": "jest --coverage"
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "googleapis": "^34.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-strategy": "^1.0.0",
    "qs": "^6.5.2"
  },
  "devDependencies": {
    "@grail/eslint-config-grail": ">=0.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.6.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "flow-bin": "^0.82.0",
    "jest": "^23.6.0",
    "jest-mock-console": "^0.4.0",
    "lint-staged": "^7.3.0",
    "mock-socket": "^8.0.2",
    "moment-timezone": "^0.5.21",
    "prettier": "^1.14.3"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --rule flowtype/require-valid-file-annotation:2 --fix",
        "git add"
      ],
      "*.{scss,json,md}": [
        "prettier --write",
        "git add"
      ],
      "*.config.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "scripts/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/index.js",
      "!**/mocks/**",
      "!src/constants/**",
      "!src/passport/**"
    ],
    "coverageThreshold": {
      "src/**/*.js": {
        "branches": 80,
        "functions": 100,
        "lines": 90,
        "statements": -10
      }
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "testEnvironment": "node"
  },
  "main": "dist/index.js",
  "private": true,
  "sideEffects": false
}
