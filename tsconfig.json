{
  "include": ["src"],
  "exclude": ["**/*.spec.tsx"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "downlevelIteration": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true
  }
}
